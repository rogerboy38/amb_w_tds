{
 "doctype": "DocType",
 "name": "BOM Template Item",
 "module": "amb_w_tds",
 "is_submittable": 0,
 "istable": 1,
 "fields": [
  {
   "fieldname": "item_code",
   "fieldtype": "Link",
   "label": "Item Code",
   "options": "Item",
   "reqd": 1
  },
  {
   "fieldname": "item_name",
   "fieldtype": "Data",
   "label": "Item Name",
   "fetch_from": "item_code.item_name"
  },
  {
   "fieldname": "qty",
   "fieldtype": "Float",
   "label": "Quantity",
   "reqd": 1,
   "non_negative": 1
  },
  {
   "fieldname": "uom",
   "fieldtype": "Link",
   "label": "UOM",
   "options": "UOM",
   "fetch_from": "item_code.stock_uom"
  },
  {
   "fieldname": "rate",
   "fieldtype": "Currency",
   "label": "Rate"
  },
  {
   "fieldname": "amount",
   "fieldtype": "Currency",
   "label": "Amount"
  },
  {
   "fieldname": "source_warehouse",
   "fieldtype": "Link",
   "label": "Source Warehouse",
   "options": "Warehouse"
  },
  {
   "fieldname": "do_not_explode",
   "fieldtype": "Check",
   "label": "Do Not Explode",
   "default": 0
  },
  {
   "fieldname": "is_scrap_item",
   "fieldtype": "Check",
   "label": "Is Scrap Item",
   "default": 0
  },
  {
   "fieldname": "raw_material_percentage",
   "fieldtype": "Float",
   "label": "Raw Material Percentage",
   "insert_after": "qty",
   "description": "Raw material percentage (equivalent to CIENTO in FoxPro)",
   "precision": "6"
  },
  {
   "fieldname": "base_quantity",
   "fieldtype": "Float",
   "label": "Base Quantity",
   "insert_after": "raw_material_percentage",
   "description": "Base quantity for calculation (equivalent to BUSCA in FoxPro)",
   "precision": "6"
  },
  {
   "fieldname": "calculated_conversion_factor",
   "fieldtype": "Float",
   "label": "Calculated Conversion Factor",
   "insert_after": "base_quantity",
   "read_only": 1,
   "description": "Automatically calculated conversion factor (BUSCA / CIENTO)",
   "precision": "6"
  }
 ]
}