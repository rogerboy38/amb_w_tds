        // Check if document is saved
        if (frm.doc.__islocal) {
            console.log('ğŸ” Debug: Document is NEW - skipping buttons');
            return;
        }
        
        console.log('ğŸ” Debug: Document is SAVED - adding buttons');
        
        // Add ONLY Create BOM button first (simplest test)
        frm.add_custom_button(__('TEST Create BOM'), function() {
            console.log('ğŸ” DEBUG: TEST Create BOM button clicked!');
            frappe.msgprint({
                title: __('TEST'),
                message: __('TEST button works!'),
                indicator: 'green'
            });
        }, __('Manufacturing'));
        
        console.log('ğŸ” Debug: Added TEST Create BOM button');
        
        // Check if button was added
        console.log('ğŸ” Debug: Current buttons:', frm.page.custom_buttons);
        console.log('ğŸ” Debug: Button groups:', frm.page.custom_buttons_group);
        
    } catch (error) {
        console.error('ğŸ” Debug: ERROR:', error);
    }
}

